<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install SYSTEM "http://dev.joomla.org/xml/1.5/plugin-install.dtd">
<install type="plugin" version="1.5" method="upgrade" group="hikashoppayment">
	<name>Hikashop SagePay Payment Plugin</name>
	<creationDate>June 2011</creationDate>
	<version>1.0.0</version>
	<author>Hikashop</author>
	<authorEmail>dev@hikashop.com</authorEmail>
	<authorUrl>http://www.hikashop.com</authorUrl>
	<copyright>Copyright (C) 2010 HIKARI SOFTWARE SARL - All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<description>This plugin enables you to setup your sagepay payment system</description>
	<files>
		<filename plugin="sagepay">sagepay.php</filename>
		<filename>sagepay_configuration.php</filename>
		<filename>sagepay_end.php</filename>
		<filename>sagepay_thankyou.php</filename>
	</files>
	<params addpath="/components/com_hikashop/params">
		<param name="pluginoptions" type="pluginoptions" default="plugin" label="hikashop" description="HikaShop options" />
	</params>
	<config>
		<fields name="params" addfieldpath="/components/com_hikashop/fields">
			<fieldset name="basic">
				<field
						id="pluginoptions"
						name="pluginoptions"
						type="pluginoptions"
						label="hikashop"
						description="HikaShop options"
				/>
			</fieldset>
		</fields>
	</config>
</install>